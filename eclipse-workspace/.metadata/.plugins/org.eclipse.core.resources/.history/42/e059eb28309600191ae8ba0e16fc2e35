MethodInvocation.allInstances()
  ->select(inv: MethodInvocation |
    ( -- Method Invocation conditions
      ( --Method Conditions
          ( -- ComplexType Conditions
            inv.method.oclContainer().oclIsKindOf(ClassDeclaration) and 
            inv.method.oclContainer().oclAsType(ClassDeclaration).name='Thread'
          ) -- End ComplexType Conditions
            or 
          ( -- ComplexType Conditions
            inv.method.oclContainer().oclIsKindOf(ClassDeclaration) and 
            inv.method.oclContainer().oclAsType(InterfaceDeclaration).name='Thread'
          ) -- End ComplexType Conditions
          
        and
        inv.method.name='run'
      ) --End Method Conditions
    ) --End Method Invocation conditions
)
