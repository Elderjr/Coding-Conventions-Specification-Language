	ClassDeclaration.allInstances()->select(class: java::ClassDeclaration |
    class.bodyDeclarations->select(field | 
        field.oclIsTypeOf(java::FieldDeclaration))->size() >= 1
    and
    class.bodyDeclarations->select(field | 
        field.oclIsTypeOf(java::FieldDeclaration) and field.oclAsType(java::FieldDeclaration).modifier.visibility = java::VisibilityKind::public)->size() > 0
)->union(
java::InterfaceDeclaration.allInstances()->select(interface: java::InterfaceDeclaration |
    interface.bodyDeclarations->select(field | 
        field.oclIsTypeOf(java::FieldDeclaration))->size() >= 1
    and
    interface.bodyDeclarations->select(field | 
        field.oclIsTypeOf(java::FieldDeclaration) and field.oclAsType(java::FieldDeclaration).modifier.visibility = java::VisibilityKind::public)->size() > 0
))
