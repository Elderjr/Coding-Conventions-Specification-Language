[comment encoding = UTF-8 /]
[module methodModule('http://www.example.org/ccsl')]
[import org::ccsl::gen::ocl::elements::elementModule /] 
[import org::ccsl::gen::ocl::elements::namedElement::namedElementModule /]


[query public queryConditionMethod(method: Method, contextElement: Element, varName: String, filters: OrderedSet(AtomicFilter), exactMatch: Boolean, negated: Boolean): Set(String) =
OrderedSet(String){
	''
}
->select(condition: String | condition.trim().size() > 0)
->union(method.queryConditionNamedElement(contextElement, varName, filters, exactMatch, negated: Boolean))/]

[template public defineQueryCondition(element: Element, contextElement: Element, varName: String, filters: OrderedSet(AtomicFilter), exactMatch: Boolean, negated: Boolean) ? (element.oclIsTypeOf(Method)) post(trim())]
[for (condition: String | element.oclAsType(Method).queryConditionMethod(contextElement, varName, filters, exactMatch, negated: Boolean)) separator(' and \n')]
[condition /][/for]
[/template]

