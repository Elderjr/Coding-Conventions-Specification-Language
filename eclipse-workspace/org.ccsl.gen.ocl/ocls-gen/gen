MethodInvocation.allInstances()->select(e1 |
  e1.method.oclAsSet()->exists(m2 | m2 <> e1 and 
  m2.name = 'run' and
  m2.oclContainer.oclAsSet()->exists(c3 | c3 <> e1 and c3 <> m2 and 
  (
    c3.oclIsKindOf(ClassDeclaration) and
    c3.oclAsType(ClassDeclaration).bodyDeclarations->includes(m2) and
    c3.oclAsType(ClassDeclaration).name = 'Thread'
  or
    c3.oclIsKindOf(InterfaceDeclaration) and
    c3.oclAsType(InterfaceDeclaration).bodyDeclarations->includes(m2) and
    c3.oclAsType(InterfaceDeclaration).name = 'Thread'
  )
)))
