rule: {
    elements:{
        call as MethodCall{
            from: AccessModifier{
                type: Class{properties:{NameProperty{value = "SimpleDateFormat"}}}
            }
            to: MethodAccess{
                namedElement: Method{NameProperty{value="format"}}
            }
        }
    }
    auxiliarProperties:{
        s as SyncronizedProperty
    }
    filters:{
        CompositeFilter:{
            operator:"OR",
            negated: true
            filters:{
                TemplateFilter{
                    template: Method{
                        properties: s,
                        statements: call
                    }
                },
                TemplateFilter{
                    template: Body{
                        properties: s,
                        statements: call
                    }
                }
            }
        }
    }
}
xpath