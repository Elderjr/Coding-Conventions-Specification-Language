AtomicRule:{
    elements: [
        inv as MethodInvocation{
            elementAccessed: Construtor {
                name: "SimpleDateFormat"
            }
        }
    ],
    filters: [
        TemplateFilter{
            negated: true,
            target: inv,
            template: MethodInvocation {
                params: [VariableAccess {
                    variable: Variable {
                        type: "Locale"
                    }
                }]
            }
        }
    ]
}