rule: AtomicRule {
    elements: {
        instanceCreation: InstanceCreation {
            constructor: Constructor {
                name: "BigInteger"
            }
        }
    },
    filters: CompositeFilter{
        operator: "or",
        filters: TemplateFilter{
            target: instanceCreation,
            template: InstanceCreation {
                params: LiteralValue{
                    value: "1"
                }
            }
        },TemplateFilter{
            target: instanceCreation,
            template: InstanceCreation {
                params: LiteralValue{
                    value: "0.0"
                }
            }
        },TemplateFilter{
            target: instanceCreation,
            template: InstanceCreation {
                params: LiteralValue{
                    value: "0"
                }
            }
        },TemplateFilter{
            target: instanceCreation,
            template: InstanceCreation {
                params: LiteralValue{
                    value: "0.0"
                }
            }
        }
    }
}