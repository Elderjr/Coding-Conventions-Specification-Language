        creation: InstanceCreation {
            constructor: c
        }
    },
    filters: {
        CompositeFilter {
            operator: "or",
            filters: {
                TemplateFilter: {
                    target: c,
                    template: Constructor{
                        returnType: Class{name: "FileInputStream"}
                    }
                },
                TemplateFilter: {
                    target: c,
                    template: Constructor{
                        returnType: Class{name: "FileOutputStream"}
                    }
                },
                TemplateFilter: {
                    target: constructor,
                    template: Constructor{
                        returnType: Class{name: "FileReader"}
                    }
                },
                TemplateFilter: {
                    target: constructor,
                    template: Constructor{
                        returnType: Class{name: "FileWritter"}
                    }
                }
            }
        }
    }
